<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.c12437908.fypv2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".register_login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.LOGIN" />
            </intent-filter>
        </activity>
        <activity android:name=".register_login.RegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.REGISTER" />
            </intent-filter>
        </activity>
        <activity android:name=".carpool.CreateCarpool">
            <intent-filter>
                <action android:name="android.intent.action.CREATE_CARPOOL" />
            </intent-filter>
        </activity>
        <activity android:name=".carpool.CarpoolDetails">
            <intent-filter>
                <action android:name="android.intent.action.CARPOOL_DETAILS" />
            </intent-filter>
        </activity>
        <activity android:name=".carpool.SearchCarpools">
            <intent-filter>
                <action android:name="android.intent.action.CARPOOL_SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".carpool.CarpoolSearchResults">
            <intent-filter>
                <action android:name="android.intent.action.CARPOOL_SEARCH_RESULTS" />
            </intent-filter>
        </activity>
        <activity android:name=".carpool.CarpoolMenu">
            <intent-filter>
                <action android:name="android.intent.action.CARPOOL_MENU" />
            </intent-filter>
        </activity>
        <activity android:name=".carpool.ListCarpools">
            <intent-filter>
                <action android:name="android.intent.action.CARPOOL_LIST_CARPOOLS" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="18"/>
</manifest>